<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        xmlns:tools="http://schemas.android.com/tools">

        <com.lb.auto_fit_textview.AutoResizeTextView
            android:id="@+id/itemTitle"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:paddingHorizontal="60dp"
            android:maxLines="2"
            android:gravity="center"
            android:text="Item Title Placeholder that should shrink"
            android:textSize="30sp" />


        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/itemRarity"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:text="Item Rarity Placeholder"
            android:textSize="25sp" />

        <com.lb.auto_fit_textview.AutoResizeTextView
            android:id="@+id/itemDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:maxLines="3"
            android:padding="10dp"
            android:text="Item Description "
            android:textSize="20sp" />

        <!-- View Contains:
        1. Item Name
        2. Item image
        3. Item Description
        4. Item Rarity?
        5. Other items in set
        6. Wiki link?
        7. Fav icon
        -->

    </LinearLayout>

    <!-- Change to not overlap linearLayout if too many items -->
    <GridView
        android:id="@+id/itemInSetGridView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginVertical="10dp"
        android:numColumns="3"
        android:horizontalSpacing="5dp"
        android:verticalSpacing="5dp"
        android:layout_alignBottom="@id/linearLayout"
        android:layout_alignParentBottom="true"

        tools:listitem="@layout/cardview_item_in_set">
    </GridView>
</RelativeLayout>
