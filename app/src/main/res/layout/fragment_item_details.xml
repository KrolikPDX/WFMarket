<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <com.lb.auto_fit_textview.AutoResizeTextView
        android:id="@+id/itemTitle"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:paddingHorizontal="40dp"
        android:maxLines="2"
        android:gravity="center"
        android:background="@color/design_default_color_primary_dark"
        android:text="Item Title Placeholder that should shrink"
        android:textSize="30sp" />


    <ImageView
        android:id="@+id/itemImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_launcher_background" />

    <com.lb.auto_fit_textview.AutoResizeTextView
        android:id="@+id/itemDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="3"
        android:background="@color/material_dynamic_neutral30"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:text="Item Description "
        android:textSize="30sp" />

    <TextView
        android:id="@+id/itemRarity"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@color/cardview_dark_background"
        android:layout_margin="5dp"
        android:text="Item Rarity Placeholder"
        android:textSize="20sp" />

    <GridView
        android:id="@+id/itemInSetGridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="2"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="10dp"
        tools:listitem="@layout/cardview_item_in_set">
    </GridView>


    <!-- View Contains:
    1. Item Name
    2. Item image
    3. Item Description
    4. Item Rarity?
    5. Other items in set
    6. Wiki link?
    7. Fav icon
    -->

</LinearLayout>