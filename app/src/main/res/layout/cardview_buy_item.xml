<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/buyItemCardView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="20dp"
        android:layout_margin="5dp"
        app:cardElevation="5dp"
        android:background="@color/primaryColor"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/buyItemPriceProgressBar"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:text="placeholder"
                android:visibility="gone"
                android:gravity="center"
                android:layout_gravity="right"/>

            <TextView
                android:id="@+id/buyItemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Placeholder"
                android:paddingHorizontal="10dp"
                android:layout_gravity="right"
                android:textStyle="bold"
                android:background="@drawable/ic_round_rectangle_24"/>

            <com.lb.auto_fit_textview.AutoResizeTextView
                android:id="@+id/buyItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="Test Item that might be too long"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                android:maxLines="2"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/buyItemImage"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_margin="5dp"
                android:scaleType="fitCenter"
                android:fitsSystemWindows="true"
                android:src="@drawable/ic_launcher_background" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
